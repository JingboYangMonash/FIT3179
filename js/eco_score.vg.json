{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "Effect of Economiy on Happiness Score",
  "data": {
    "url": "https://raw.githubusercontent.com/JingboYangMonash/FIT3179/master/data/world_happiness_2016.csv"
  },
  "params": [
    {
      "name": "Family_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 1.1,
        "step": 0.1,
        "name": "Contribution of factor Family: "
      }
    },
    {
      "name": "Region_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Western Europe",
          "North America",
          "Australia and New Zealand",
          "Middle East and Northern Africa",
          "Latin America and Caribbean",
          "Southeastern Asia",
          "Central and Eastern Europe",
          "Eastern Asia",
          "Sub-Saharan Africa",
          "Southern Asia"
        ],
        "labels": [
          "Show All",
          "Western Europe",
          "North America",
          "Australia and New Zealand",
          "Middle East and Northern Africa",
          "Latin America and Caribbean",
          "Southeastern Asia",
          "Central and Eastern Europe",
          "Eastern Asia",
          "Sub-Saharan Africa",
          "Southern Asia"
        ],
        "name": "Select by Region: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Family >= Family_Above"},
    {"filter": "Region_selection == null || datum.Region == Region_selection"}
  ],
  "mark": "circle",
  "encoding": {
    "x": {"field": "GDP", "type": "quantitative", "title": "GDP per capita"},
    "y": {"field": "Score", "type": "quantitative", "title": "Happiness Score"},
    "color": {"field": "Country", "type": "nominal"},
    "size": {"field": "Health", "type": "quantitative"},
    "tooltip": [
      {"field": "Country", "type": "nominal"},
      {"field": "Score", "type": "quantitative", "format": ","},
      {"field": "GDP", "type": "quantitative", "format": ","},
      {"field": "Health", "type": "quantitative", "format": ","},
      {"field": "Family", "type": "quantitative", "format": ","}
    ]
  },
  "config": {}
}