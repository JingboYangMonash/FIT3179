{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Average Happiness Score of each Region",
  "width": "container",
  "height":"container",
  "data": {
    "url": "https://raw.githubusercontent.com/JingboYangMonash/FIT3179/master/data/world_happiness_2016.csv"
  },
  "transform": [
    {
      "aggregate": [{"op": "mean", "field": "Score", "as": "avg_score"}],
      "groupby": ["Region"]
    },
    {
      "calculate": "datum.Score > 5.382 ? 'Above_avg' : 'Below_avg'",
      "as": "class"
    }
  ],
  "encoding": {
    "x": {
      "field": "Region",
      "type": "nominal",
      "title": "Region",
      "axis": {"labelAngle": 15}
    },
    "y": {
      "field": "avg_score",
      "type": "quantitative",
      "title": "Happiness Score"
    }
  },
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "color": {
          "field": "Region",
          "scale": {"range": ["#675193", "#ca8861"]},
          "legend": null
        }
      }
    }
  ],
  "config": {}
}